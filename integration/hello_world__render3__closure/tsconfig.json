{
  "angularCompilerOptions": {
    "annotationsAs": "static fields",
    "annotateForClosureCompiler": true,
    "alwaysCompileGeneratedCode": true
  },

  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "built",
    "rootDir": "./src",
    "declaration": true,
    "types": [],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "src/index.ts"
  ]
}
